<body>
  <h1>Hello {{currentUser.username}} </h1>
  {{ #posts}}

    <form method = "POST">
      <div class = 'msgPost'>
        <h1>{{title}}</h1>
        <p>{{body}}</p>
        <a href = "/{{id}}/messageLikes"><h3>Who Liked it</h3>
        </div>
    </form>
    <form method= "POST" action="/{{id}}/delete">
      {{ #author}}
      <button>Delete</button>
      {{ /author}}

    </form>
    <form method= "POST" action="/{{id}}/messageLikes">
      <button>like</button>
    </form>
  {{ /posts}}
</body>
</html>
